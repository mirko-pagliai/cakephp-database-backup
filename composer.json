{
    "name": "mirko-pagliai/cakephp-database-backup",
    "description": "Database Backup plugin for CakePHP",
    "homepage": "https://github.com/mirko-pagliai/cakephp-database-backup",
    "type": "cakephp-plugin",
    "license": "MIT",
    "authors": [
        {
            "name": "Mirko Pagliai",
            "email": "mirko.pagliai@gmail.com"
        }
    ],
    "require": {
        "php": ">=5.6 <7.4",
        "cakephp/cakephp": "^3.5.1",
        "cakephp/chronos": "^1.0.1",
        "mirko-pagliai/php-tools": "dev-php5.6"
    },
    "require-dev": {
        "cakephp/cakephp-codesniffer": "^3.0|^4.4",
        "phpunit/phpunit": "^5.7.14|^6.0"
    },
    "autoload": {
        "psr-4": {
            "DatabaseBackup\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\": "tests/test_app/TestApp/",
            "Cake\\Test\\": "vendor/cakephp/cakephp/tests",
            "DatabaseBackup\\Test\\": "tests"
        }
    },
    "scripts": {
        "check": [
            "@cs-check",
            "@update-lowest",
            "@test",
            "@composer update",
            "@test",
            "@stan"
        ],
        "cs-check": "phpcs --standard=phpcs.xml.dist",
        "cs-fix": "phpcbf --standard=phpcs.xml.dist",
        "test": "phpunit",
        "coverage": "XDEBUG_MODE=coverage phpunit --coverage-html=coverage",
        "phpstan": "phpstan.phar analyse",
        "psalm": "psalm.phar",
        "stan": [
            "@stan-setup",
            "@phpstan",
            "@psalm"
        ],
        "stan-setup": "cp composer.json composer.backup && composer require --dev phpstan/phpstan:^0.12 psalm/phar:^3.18 && mv composer.backup composer.json",
        "update-lowest": "@composer update --prefer-lowest"
    }
}
